# Logging
LOG_LEVEL=INFO

# A2A Server Configuration
A2A_HOST=0.0.0.0
A2A_PORT=8000

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8001/mcp/

# LLM Configuration
LLM_MODEL=gpt-4
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=http://lite-llm-proxy  # Optional: for custom endpoints
EXTRA_HEADERS='{"header-name": "header-value"}' # Optional: for custom headers

# LLM Parameters
LLM_TEMPERATURE=0.0

# Execution Limits
MAX_ITERATIONS=20

# Public URL advertised in Agent Card (optional)
# A2A_PUBLIC_URL=http://localhost:8000/

# Tracing
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317  # OTLP gRPC endpoint (e.g. Jaeger, Grafana Tempo)
OTEL_CONSOLE_TRACING=false  # Print traces to console when no OTLP endpoint is set
